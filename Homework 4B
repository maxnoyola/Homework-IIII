#include "ionmanip"
#include "iostream"

using namespace std;

void display_month(int n_days, int start_day);
bool leapYear(int year);
int main() {
  const string months[] = {"January",   "February", "March",    "April",
                           "May",       "June",     "July",     "August",
                           "September", "October",  "November", "December"};
  int month_days[] = {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};
  string name_cal;
  int year, start_day;
  cout << "Enter the name of the Calendar: ";
  getline(cin, name_cal);
  cout << "Enter the year for which you wish to generate the calendar: ";
  cin >> year;
  cout << "Enter the day of the week that January first is on: ";
  cin >> start_day;
  if (leapYear(year)) {
    cout << "Calendar for year " << year << " - A leap Year" << endl;
    month_days[1] += 1;
  }
  for (int i = 0; i < 12; i++) {
    cout << endl << months[i] << endl;
    display_month(month_days[i], start_day);
    start_day = (start_day + month_days[i]) % 7;
  }
  return 0;
}
void display_month(int n_days, int start_day) {
  cout << "Sun Mon Tue Wed Thu Fri Sat" << endl;
  for (int i = 0; i < start_day; i++)
    cout << setw(4) << " ";
  for (int i = 1; i <= n_days; i++) {
    cout << setw(3) << i;
    if ((start_day + i) % 7 == 0)
      cout << "\n";
    else
      cout << " ";
  }
  cout << endl;
}
bool leapYear(int year) {
  return (((year % 4 == 0) && (year % 100 != 0)) || (year % 400 == 0));
}
